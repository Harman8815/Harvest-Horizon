<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Harvest Horizon</title>
    <link rel="stylesheet" href="/bootstrap/css/bootstrap.min.css" />
    <link
      href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500;700&display=swap"
      rel="stylesheet"
    />
    <style>
      body {
        font-family: "Roboto", sans-serif;
      }

      body::-webkit-scrollbar {
        display: none; /* Chrome, Safari, and Opera */
      }

      .navbar-brand {
        font-size: 2rem;
        font-weight: 700;
        margin-bottom: 0;
      }

      .navbar-nav .nav-link {
        color: #ffffff !important;
        font-size: 1.3rem;
        font-weight: 400;
        margin-left: 1rem;
      }

      .navbar-nav .nav-link:hover {
        color: #0dfd24 !important;
      }

      /* Style for the footer */
      .footer {
        background-color: #343a40;
      }

      /* Ensure the weather info is centered vertically */
      section {
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        height: 100vh;
      }
    </style>
  </head>

  <body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
      <div class="container-fluid">
        <!-- Website Name (Left) -->
        <a class="navbar-brand" href="#">Harvest Horizon</a>
        <button
          class="navbar-toggler"
          type="button"
          data-bs-toggle="collapse"
          data-bs-target="#navbarNav"
          aria-controls="navbarNav"
          aria-expanded="false"
          aria-label="Toggle navigation"
        >
          <span class="navbar-toggler-icon"></span>
        </button>
        <div
          class="collapse navbar-collapse justify-content-end"
          id="navbarNav"
        >
          <!-- Navbar Links (Right) -->
          <ul class="navbar-nav">
            <li class="nav-item"><a class="nav-link" href="#">Home</a></li>
            <li class="nav-item">
              <a class="nav-link" href="#about">About</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="#services">Services</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/crops">Crops</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="#contactus">Contact-Us</a>
            </li>
            <!-- Profile Icon (Right End) -->
            <li class="nav-item">
              <a class="nav-link" href="/profile">
                <svg
                  xmlns="img/weathericons/sun.svg"
                  width="20"
                  height="20"
                  fill="currentColor"
                  class="bi bi-person-circle"
                  viewBox="0 0 16 16"
                >
                  <path d="M11 6a3 3 0 1 1-6 0 3 3 0 0 1 6 0" />
                  <path
                    fill-rule="evenodd"
                    d="M0 8a8 8 0 1 1 16 0A8 8 0 0 1 0 8m8-7a7 7 0 0 0-5.468 11.37C3.242 11.226 4.805 10 8 10s4.757 1.225 5.468 2.37A7 7 0 0 0 8 1"
                  />
                </svg>
              </a>
            </li>
          </ul>
        </div>
      </div>
    </nav>

    <section class="vh-100 d-flex flex-column">
      <!-- Location Input Section -->
      <div
        id="location"
        class="d-flex justify-content-center align-items-center"
        style="height: 20vh"
      >
        <input
          type="text"
          id="country"
          class="form-control me-2"
          placeholder="Country"
          style="max-width: 200px"
        />
        <input
          type="text"
          id="city"
          class="form-control me-2"
          placeholder="City"
          style="max-width: 200px"
        />
        <input
          type="submit"
          id="check"
          class="btn btn-dark"
          value="Go"
          onclick="getWeather()"
        />
      </div>

      <!-- Weather Info Card Section -->
      <div
        class="flex-grow-1 d-flex justify-content-center align-items-center"
        style="overflow-y: auto"
      >
        <div class="card" style="width: 300px">
          <img
            src="/img/weathericons/sun.svg"
            id="image"
            class="card-img-top img-fluid"
            alt="Weather Image"
            style="max-height: 150px; "
          />
          <div class="card-body">
            <h2 id="weatherCountry">London</h2>
            <h2 id="temperature">15째<strong>C</strong></h2>
            <h2 id="weatherDescription">Cloudy</h2>
            <ul class="list-unstyled">
              <li id="feelsLike">Feels Like 14째C</li>
              <li id="humidity">Humidity 75%</li>
              <li id="longitude">Longitude -0.1276</li>
              <li id="latitude">Latitude 51.5074</li>
            </ul>
          </div>
        </div>
      </div>
    </section>

    <!-- Footer Section -->
    <footer class="footer bg-dark text-white py-4">
      <div class="container text-center">
        <p>&copy; 2024 Website Name. All rights reserved.</p>
        <p>
          <a href="#" class="text-white">Privacy Policy</a> |
          <a href="#" class="text-white">Terms of Service</a>
        </p>
      </div>
    </footer>

    <script src="/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script>
      async function getWeather() {
        const country = document.getElementById("country").value.trim();
        const city = document.getElementById("city").value.trim();
        if (!country || !city) {
          alert("Please enter both country and city.");
          return;
        }

        const response = await fetch(
          `/getweather?city=${encodeURIComponent(
            city
          )}&country=${encodeURIComponent(country)}`
        );
        const data = await response.json();

        // Update weather information in the UI
        if (data.error) {
          alert(data.error);
        } else {
          document.getElementById("weatherCountry").innerText = data.name;
          document.getElementById(
            "temperature"
          ).innerHTML = `${data.main.temp}째<strong>C</strong>`;
          document.getElementById("weatherDescription").innerText =
            data.weather[0].description;
          document.getElementById(
            "feelsLike"
          ).innerText = `Feels Like ${data.main.feels_like}째C`;
          document.getElementById(
            "humidity"
          ).innerText = `Humidity ${data.main.humidity}%`;
          document.getElementById(
            "longitude"
          ).innerText = `Longitude ${data.coord.lon}`;
          document.getElementById(
            "latitude"
          ).innerText = `Latitude ${data.coord.lat}`;
          const iconName = data.icon;
          document.getElementById(
            "image"
          ).src = `/img/weathericons/${iconName}`;
        }
      }
    </script>
  </body>
</html>
